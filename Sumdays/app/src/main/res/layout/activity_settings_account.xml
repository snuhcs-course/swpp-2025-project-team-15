<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282d35">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_account_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- header -->
        <include
            android:id="@+id/header"
            layout="@layout/include_settings_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 닉네임 Section Title -->
        <TextView
            android:id="@+id/nicknameSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임 변경"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 현재 닉네임 -->
        <TextView
            android:id="@+id/currentNicknameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 닉네임: "
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/nicknameSectionTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/currentNicknameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="사용자닉네임123"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@id/currentNicknameLabel"
            app:layout_constraintBottom_toBottomOf="@id/currentNicknameLabel"
            app:layout_constraintStart_toEndOf="@id/currentNicknameLabel"/>

        <!-- 새 닉네임 입력 -->
        <EditText
            android:id="@+id/newNicknameInputEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="새로운 닉네임을 입력하세요"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/currentNicknameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/updateNicknameButton"/>

        <!-- 닉네임 변경 버튼 (1개만 유지) -->
        <Button
            android:id="@+id/updateNicknameButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="변경"
            android:backgroundTint="#8B008B"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/newNicknameInputEditText"
            app:layout_constraintBottom_toBottomOf="@id/newNicknameInputEditText"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/newNicknameInputEditText"/>

        <!-- 비밀번호 변경 섹션 -->
        <TextView
            android:id="@+id/passwordSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/separator1"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 현재 비밀번호 -->
        <EditText
            android:id="@+id/currentPasswordInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="현재 비밀번호"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/passwordSectionTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 새 비밀번호 -->
        <EditText
            android:id="@+id/newPasswordInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="새 비밀번호 (8자 이상 권장)"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/currentPasswordInputEditText"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 새 비밀번호 확인 -->
        <EditText
            android:id="@+id/confirmPasswordInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="새 비밀번호 확인"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/newPasswordInputEditText"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 비밀번호 변경 버튼 (1개만 유지) -->
        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8B008B"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordInputEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/changePasswordButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
