<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_account_root">

    <!-- 고정 헤더 -->
    <include
        android:id="@+id/header"
        layout="@layout/include_settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 1. 닉네임 변경 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임 변경"
                android:textSize="@dimen/text_size_L"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- 현재 닉네임 표시 (한 줄에 배치) -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 닉네임: "
                    android:textSize="@dimen/text_size_S"/>

                <TextView
                    android:id="@+id/currentNicknameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="사용자닉네임123"
                    android:textSize="@dimen/text_size_S"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp">

                <EditText
                    android:id="@+id/newNicknameInputEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="새로운 닉네임을 입력하세요"
                    android:textColorHint="@color/text_color_hint"
                    android:padding="12dp"
                    android:inputType="text"
                    android:autofillHints="nickname"/>

                <Button
                    android:id="@+id/updateNicknameButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경"
                    app:backgroundTint="@color/btn_violet"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_divider"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- 2. 비밀번호 변경 섹션 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:textSize="@dimen/text_size_L"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/currentPasswordInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="현재 비밀번호"
                android:textColorHint="@color/text_color_hint"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="textPassword"
                android:autofillHints="password"/>

            <EditText
                android:id="@+id/newPasswordInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="새 비밀번호 (8자 이상 권장)"
                android:textColorHint="@color/text_color_hint"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="textPassword"
                android:autofillHints="newPassword"/>

            <EditText
                android:id="@+id/confirmPasswordInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="새 비밀번호 확인"
                android:textColorHint="@color/text_color_hint"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="textPassword"
                android:autofillHints="newPassword"/>

            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                app:backgroundTint="@color/btn_violet"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
