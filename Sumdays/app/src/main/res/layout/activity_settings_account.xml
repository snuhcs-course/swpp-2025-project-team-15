<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_account_root"
    android:background="#282d35">

    <!-- 공통 헤더 (SettingActivity의 헤더 구조를 가정) -->
    <include
        android:id="@+id/header"
        layout="@layout/include_settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 1. 닉네임 변경 섹션 -->

    <TextView
        android:id="@+id/nicknameSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 변경"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 현재 닉네임 표시 (Kotlin 코드: binding.currentNicknameTextView.text) -->
    <TextView
        android:id="@+id/currentNicknameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 닉네임: "
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/nicknameSectionTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentNicknameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="사용자닉네임123"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/currentNicknameLabel"
        app:layout_constraintBottom_toBottomOf="@id/currentNicknameLabel"
        app:layout_constraintStart_toEndOf="@id/currentNicknameLabel" />

    <!-- 새 닉네임 입력 (Kotlin 코드: binding.newNicknameInputEditText) -->
    <EditText
        android:id="@+id/newNicknameInputEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="새로운 닉네임을 입력하세요"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="text"
        android:autofillHints="nickname"
        app:layout_constraintTop_toBottomOf="@id/currentNicknameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/updateNicknameButton" />

    <!-- 닉네임 변경 버튼 (Kotlin 코드: binding.updateNicknameButton) -->
    <Button
        android:id="@+id/updateNicknameButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="변경"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/newNicknameInputEditText"
        app:layout_constraintBottom_toBottomOf="@id/newNicknameInputEditText"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/newNicknameInputEditText" />

        <!-- 닉네임 변경 버튼 (Kotlin 코드: binding.updateNicknameButton) -->
        <Button
            android:id="@+id/updateNicknameButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="변경"
            app:backgroundTint="#8B008B"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/newNicknameInputEditText"
            app:layout_constraintBottom_toBottomOf="@id/newNicknameInputEditText"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/passwordSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/separator1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 현재 비밀번호 입력 (Kotlin 코드: binding.currentPasswordInputEditText) -->
    <EditText
        android:id="@+id/currentPasswordInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="현재 비밀번호"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword"
        android:autofillHints="password"
        app:layout_constraintTop_toBottomOf="@id/passwordSectionTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 새 비밀번호 입력 (Kotlin 코드: binding.newPasswordInputEditText) -->
    <EditText
        android:id="@+id/newPasswordInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="새 비밀번호 (8자 이상 권장)"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword"
        android:autofillHints="newPassword"
        app:layout_constraintTop_toBottomOf="@id/currentPasswordInputEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 새 비밀번호 확인 입력 (Kotlin 코드: binding.confirmPasswordInputEditText) -->
    <EditText
        android:id="@+id/confirmPasswordInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="새 비밀번호 확인"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword"
        android:autofillHints="newPassword"
        app:layout_constraintTop_toBottomOf="@id/newPasswordInputEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 비밀번호 변경 버튼 (Kotlin 코드: binding.changePasswordButton) -->
    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordInputEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/changePasswordButton"
        app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 비밀번호 변경 버튼 (Kotlin 코드: binding.changePasswordButton) -->
        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            app:backgroundTint="#8B008B"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordInputEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/changePasswordButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
