<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282d35"
    android:id="@+id/setting_main_root"
    android:fitsSystemWindows="true"
    tools:context=".CalendarActivity">


    <ScrollView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 사용자 블록 -->
            <LinearLayout
                android:id="@+id/userBlock"
                android:background="@drawable/settings_rounded_card"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 닉네임 (왼쪽 정렬) -->
                    <TextView
                        android:id="@+id/nickname"
                        android:text="닉네임"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- 버튼 2 (오른쪽 끝) -->
                    <ImageButton
                        android:id="@+id/backupBtn"
                        android:src="@drawable/cloud_done"
                        app:tint="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="비밀번호 변경" />

                    <!-- 버튼 1 (비번 변경 왼쪽에 배치) -->
                    <ImageButton
                        android:id="@+id/initBtn"
                        android:src="@drawable/cloud_download"
                        app:tint="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_toStartOf="@id/backupBtn"
                        android:layout_marginEnd="12dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="닉네임 수정" />

                </RelativeLayout>
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <!-- 세부 설정 페이지 버튼 -->
            <LinearLayout
                android:id="@+id/notificationBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:text="알림 설정"
                    style="@style/TextAppearance.App.Normal"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diaryStyleBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:text="일기 스타일"
                    style="@style/TextAppearance.App.Normal"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labsBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:text="실험실"
                    style="@style/TextAppearance.App.Normal"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accountBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:text="계정 설정"
                    style="@style/TextAppearance.App.Normal"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tutorialBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:text="튜토리얼 다시보기"
                    style="@style/TextAppearance.App.Normal"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/logoutBlock"
                style="@style/SettingsItemStyle">
                <TextView
                    android:text="로그아웃"
                    style="@style/TextAppearance.App.Normal"
                    android:textColor="#FF0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/include_nav_calendar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>