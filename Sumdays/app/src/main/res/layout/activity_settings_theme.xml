<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경색 추가 -->
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282d35" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 세팅 헤더 추가 -->
        <include
            android:id="@+id/header"
            layout="@layout/include_settings_header" />

        <!-- 시스템 설정 유지 -->
        <LinearLayout
            android:id="@+id/themeSystem"
            style="@style/SettingsItemStyle">

            <TextView
                android:text="시스템 설정 유지"
                style="@style/TextAppearance.App.Normal"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 라이트 모드 -->
        <LinearLayout
            android:id="@+id/themeLight"
            style="@style/SettingsItemStyle">

            <TextView
                android:text="라이트 모드"
                style="@style/TextAppearance.App.Normal"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 다크 모드 -->
        <LinearLayout
            android:id="@+id/themeDark"
            style="@style/SettingsItemStyle">

            <TextView
                android:text="다크 모드"
                style="@style/TextAppearance.App.Normal"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>