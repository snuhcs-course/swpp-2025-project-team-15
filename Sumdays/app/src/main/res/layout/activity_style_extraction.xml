<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_style_extraction_root">

    <include
        android:id="@+id/header"
        layout="@layout/include_settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/instructionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="원하는 스타일로 작성된 텍스트와 이미지를 합쳐 최소 5개 이상을 제공해야 합니다."
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_XS"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="20dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/dark_divider" />

            <TextView
                android:id="@+id/textInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 텍스트 직접 입력"
                android:textSize="@dimen/text_size_S"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/diaryTextInput"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="원하는 스타일로 작성된 텍스트를 입력하세요. \n한 줄당 하나로 인식됩니다."
                android:gravity="top|start"
                android:textSize="@dimen/text_size_S"
                android:textColorHint="@color/text_color_hint"
                android:background="@color/dark_item_card_background"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/imageSelectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. 이미지 선택 (손글씨 일기 사진 등)"
                android:textSize="@dimen/text_size_S"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp" />
            <!-- 사진 갤러리 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photo_gallery_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:minHeight="80dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_photo_gallery" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">


                <TextView
                    android:id="@+id/selectedImageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택된 이미지: 0개"
                    android:textColor="@color/text_color_hint"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <Button
                android:id="@+id/runExtractionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스타일 추출 실행"
                android:backgroundTint="@color/btn_violet"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 로딩 오버레이 -->
    <View
        android:id="@+id/loading_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/loading_gif_view"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>