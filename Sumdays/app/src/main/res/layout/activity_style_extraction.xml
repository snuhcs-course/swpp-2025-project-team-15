<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282d35"
    android:id="@+id/setting_style_extraction_root">

    <include
        android:id="@+id/header"
        layout="@layout/include_settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="본인의 말투로 작성된 텍스트와 이미지(손글씨 일기)를 합쳐 최소 5개 이상을 제공해야 합니다."
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="20dp"
        android:background="#444444"
        app:layout_constraintTop_toBottomOf="@id/instructionTextView"
        app:layout_constraintBottom_toTopOf="@id/textInputTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textInputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 텍스트 일기 직접 입력"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/diaryTextInput"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="일기 텍스트를 줄바꿈하여 입력하세요. \n한 줄당 하나로 인식됩니다."
        android:gravity="top|start"
        android:textSize = "16sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:background="#21262e"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/textInputTitle" />

    <TextView
        android:id="@+id/imageSelectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 이미지 일기 선택 (손글씨 일기 사진 등)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/diaryTextInput"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/selectImagesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 선택"
        android:backgroundTint="#007ACC"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageSelectTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selectedImageCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="선택된 이미지: 0개"
        android:textColor="#CCCCCC"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/selectImagesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/selectImagesButton"
        app:layout_constraintBottom_toBottomOf="@id/selectImagesButton" />

    <Button
        android:id="@+id/runExtractionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="스타일 추출 실행"
        android:backgroundTint="#8B008B"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/selectedImageCount"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>