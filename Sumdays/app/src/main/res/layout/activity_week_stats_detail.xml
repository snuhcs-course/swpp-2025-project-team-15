<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:id="@+id/main_detail">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282d35" />

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white"
            android:contentDescription="뒤로가기"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/week_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주간 통계 상세 분석"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/week_range_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:text="2025-10-13 ~ 2025-10-19 | 공부, 긴장, 성취감" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_corners"
            >

            <TextView
                style="@style/SectionTitle"
                android:text="일기 작성 횟수"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/diary_count_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:text="5/7"/>


                <ProgressBar
                    android:id="@+id/diary_count_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:max="7"
                    android:progress="5"
                    android:progressTint="@color/violet_dark" /> </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners">
            <TextView
                style="@style/SectionTitle"
                android:text="이번 주 요약"
                android:textColor="@color/white"
                android:layout_marginTop="0dp" />
            <TextView android:id="@+id/overview_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners">

            <TextView
                style="@style/SectionTitle"
                android:text="이번 주 감정 분석"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"/>
            <TextView android:id="@+id/dominant_emoji_text_view" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/thermometer_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comment_title"
                tools:src="@drawable/ic_thermometer_high" />

            <!-- ★★★ 감정 점수 (visibility="gone" 삭제) ★★★ -->
            <TextView
                android:id="@+id/emotion_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/thermometer_icon"
                app:layout_constraintStart_toStartOf="@id/thermometer_icon"
                app:layout_constraintTop_toBottomOf="@id/thermometer_icon"
                tools:text="감정 온도: 30°C" />

            <TextView
                android:id="@+id/emotion_trend_text_view"
                android:text="추세: 안정적"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/emotion_analysis_bar_chart"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners">
            <TextView
                style="@style/SectionTitle"
                android:text="조언 한마디"
                android:textColor="@color/white"
                android:layout_marginTop="0dp" />
            <TextView
                android:id="@+id/advice_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/emotion_cycle_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />
        </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>