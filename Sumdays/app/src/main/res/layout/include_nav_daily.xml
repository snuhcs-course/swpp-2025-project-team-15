<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@android:color/transparent">

    <View
        android:layout_marginTop="48dp"
        android:layout_width="110dp"
        android:layout_height="3dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:background="#DDDDDD"/>

    <View
        android:layout_marginTop="48dp"
        android:layout_width="110dp"
        android:layout_height="3dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="20dp"
        android:background="#DDDDDD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:src="@drawable/ic_calendar"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#777777" />

        <ImageButton
            android:id="@+id/btnDaily"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#777777" />

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#777777" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btnSum"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_fox"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal|bottom"
        android:translationY="-85dp"
        app:tint="@null"/>

    <ImageView
        android:id="@+id/sumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sum_text"
        android:layout_gravity="center_horizontal|bottom"
        android:translationY="-75dp"
        app:layout_constraintTop_toTopOf="@id/btnSum"
        app:layout_constraintBottom_toBottomOf="@id/btnSum"
        app:layout_constraintStart_toStartOf="@id/btnSum"
        app:layout_constraintEnd_toEndOf="@id/btnSum"/>
</FrameLayout>
