<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="" />

    <TextView
        android:id="@+id/tv_emoji"
        android:layout_width="32dp" android:layout_height="32dp" android:gravity="center"
        android:textSize="20sp" android:text="ðŸŽ‰"
        android:visibility="gone"

        app:layout_constraintEnd_toEndOf="@id/tv_circle"
        app:layout_constraintTop_toTopOf="@id/tv_circle"
        app:layout_constraintBottom_toBottomOf="@id/tv_circle"
        app:layout_constraintStart_toStartOf="@id/tv_circle"
        />

    <TextView
        android:id="@+id/tv_day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="15"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>