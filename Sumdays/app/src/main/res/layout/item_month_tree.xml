<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:background="@drawable/dark_sky_background">


    <ImageView
        android:id="@+id/grape_glow_background"
        android:layout_width="200dp"  android:layout_height="200dp"
        android:src="@drawable/ic_moon"
        app:layout_constraintTop_toTopOf="@id/grape_icon"
        app:layout_constraintBottom_toBottomOf="@id/grape_icon"
        app:layout_constraintStart_toStartOf="@id/grape_icon"
        app:layout_constraintEnd_toEndOf="@id/grape_icon"
        android:visibility="gone"
        android:contentDescription="포도 빛 효과" />

    <View
        android:id="@+id/statistics_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/statistics_background" />

    <LinearLayout
        android:id="@+id/tree_stem_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/grape_icon"
        app:layout_constraintBottom_toTopOf="@+id/month_control_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="10dp"
        android:clipChildren="false">

    </LinearLayout>

    <ImageView
        android:id="@+id/grape_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        android:contentDescription="월간 요약 포도"
        android:src="@drawable/ic_grape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/month_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:layout_marginBottom="-10dp">

        <!-- 이전 달 버튼 -->
        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_ios"
            android:background="@android:color/transparent"
            android:layout_marginStart="16dp"
            android:contentDescription="이전 달" />

        <!-- 월 제목 -->
        <TextView
            android:id="@+id/month_title"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 9월"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 다음 달 버튼 -->
        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="다음 달"
            android:src="@drawable/ic_arrow_forward_ios" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>