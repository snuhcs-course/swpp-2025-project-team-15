<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Title (달력, 내 정보...) -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Normal (기본 본문) -->
    <style name="TextAppearance.App.Normal" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="lineHeight">20sp</item>
    </style>

    <!-- Settings Item Styles -->
    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/settings_rounded_card</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="Theme.Sumdays.TutorialDialog" parent="Theme.First">
        <!-- 바깥은 약간 어둡게, 안쪽은 흰색 팝업 느낌 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@drawable/tutorial_background_white</item>
    </style>

</resources>
